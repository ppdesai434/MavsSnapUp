<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="main.mavmarket.ItemDescActivity"
    tools:showIn="@layout/app_bar_item_desc">

    <TextView
        android:id="@+id/txtItemName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgProduct"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="itemname"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textSize="40dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imgProduct"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:srcCompat="@drawable/custom_edittext_1"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="12dp" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imgProduct"
        android:layout_marginStart="25dp"
        android:layout_toEndOf="@+id/imgProduct"
        android:text="PRICE"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/txtItemPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView14"
        android:layout_below="@+id/textView14"
        android:text="price"
        android:textSize="15dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CATEGORY"
        android:textSize="20dp"
        android:layout_below="@+id/txtItemPrice"
        android:layout_alignStart="@+id/txtItemPrice"
        android:layout_marginTop="20dp" />

    <TextView
        android:id="@+id/txtItemCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView15"
        android:layout_below="@+id/textView15"
        android:text="category"
        android:textSize="15dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtItemDescription"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txtItemName"
        android:layout_marginTop="10dp"
        android:text="description"
        android:textSize="20dp" />

    <Button
        android:id="@+id/btnShowInterest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="47dp"
        android:background="@drawable/custom_btn_primary"
        android:text="MAKE AN OFFER"
        android:textColor="@color/fontLight"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
